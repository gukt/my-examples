<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/mvc
	    http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
	">

    <import resource="context-hibernate.xml"/>

    <!-- 启用组件扫描 -->
    <context:component-scan base-package="ktgu.lab.coconut.web">
        <context:exclude-filter type="regex" expression="ktgu.lab.coconut.web.test.*"/>
    </context:component-scan>

    <!-- 启用注解驱动 -->
    <mvc:annotation-driven/>
    <!--<mvc:annotation-driven conversion-service="conversionServiceFactory"/>-->

    <!-- 配置处理器(Handler)拦截器 -->
    <mvc:interceptors>
        <!--站点维护拦截器  -->
        <!--<bean class="ktgu.lab.coconut.web.interceptor.SiteMaintenanceHandlerInterceptor" />-->

        <!--性能监控拦截器，也可以换成Spring内置的PerformanceMonitorInterceptor -->
        <bean class="ktgu.lab.coconut.web.interceptor.PerformanceMonitorInterceptor" />

        <!-- 对某些需要登录验证的页面进行拦截 -->
        <mvc:interceptor>
            <mvc:mapping path="/profile"/>
            <bean class="ktgu.lab.coconut.web.interceptor.SecurityCheckingHandlerInterceptor"/>
        </mvc:interceptor>

        <!--		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />-->


